rule test_methyldackel_extract_fraction:
    input:
        ref="chgchh.fa",
        aln="chgchh_aln.bam",
        aln_bai="chgchh_aln.bam.bai",
        bw="chgchh.bw",
    output:
        cpg="cpg.meth.bg",
        chh="chh.meth.bg",
        chg="chg.meth.bg",
    log:
        "logs/md_extract/meth.log",
    params:
        extra="--fraction",
    wrapper:
        "master/bio/methyldackel/extract"


rule test_methyldackel_extract_count:
    input:
        ref="chgchh.fa",
        aln="chgchh_aln.bam",
        aln_bai="chgchh_aln.bam.bai",
        bw="chgchh.bw",
