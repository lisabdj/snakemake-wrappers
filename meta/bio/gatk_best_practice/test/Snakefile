rule create_dict:
    input:
        "genome.fasta",
    output:
        "genome.dict",
    threads: 1
    resources:
        mem_mb=1024,
    log:
        "logs/picard/create_dict.log",
    params:
        extra="",
    wrapper:
        "master/bio/picard/createsequencedictionary"


rule samtools_index:
    input:
        "genome.fasta",
    output:
        "genome.fasta.fai",
    log:
        "logs/genome_index.log",
    params:
        extra="",  # optional params string
    wrapper:
        "master/bio/samtools/faidx"


rule gatk_baserecalibrator:
    input:
        bam="mapped/{sample}.bam",
        ref="genome.fasta",
        ref_idx="genome.fasta.fai",
        dict="genome.dict",
        known="known.vcf.gz",
        known_idx="known.vcf.gz.tbi",
    output:
        recal_table="recal/{sample}.grp",
    threads: 1
    resources:
        mem_mb=1024,
    log:
        "logs/gatk/baserecalibrator/{sample}.log",
    params:
        extra="",  # optional
        java_opts="",  # optional
    wrapper:
        "master/bio/gatk/baserecalibrator"


rule gatk_applybqsr:
    input:
        bam="mapped/{sample}.bam",
        ref="genome.fasta",
        dict="genome.dict",
        recal_table="recal/{sample}.grp",
    output:
        bam="recal/{sample}.bam",
    threads: 1
    resources:
        mem_mb=1024,
    log:
        "logs/gatk/gatk_applybqsr/{sample}.log",
    params:
        extra="",  # optional
        java_opts="",  # optional
        embed_ref=True,  # embed the reference in cram output
    wrapper:
        "master/bio/gatk/applybqsr"


rule mutect2:
    input:
        fasta="genome.fasta",
        map="recal/{sample}.bam",
    output:
        vcf="variant/{sample}.vcf",
        bam="variant/{sample}.bam",
        f1r2="counts/{sample}.f1r2.tar.gz",
    threads: 1
    resources:
        mem_mb=1024,
    log:
        "logs/mutect/{sample}.log",
    wrapper:
        "master/bio/gatk/mutect"


rule gatk_get_pileup_summaries:
    input:
        bam="recal/{sample}.bam",
        variants="known.vcf.gz",
    output:
        "summaries/{sample}.table",
    threads: 1
    resources:
        mem_mb=1024,
    params:
        extra="",
    log:
        "logs/summary/{sample}.log",
    wrapper:
        "master/bio/gatk/getpileupsummaries"


